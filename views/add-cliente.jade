extends layout.jade 

block content 
    section.container 
        div.item.log
        div.item
            h1 
                a(href="/")= title
        div.item
            form.form(method= "post", action="/")
                fieldset 
                    div.container.p1
                        label.item.i-b.v-top.ph3(for="cliente_id") Numero de cliente;
                        input.item.i-b.v-top.ph9#cliente_id(type="text", name= "cliente_id", required) 
                    
                    div.container.p1
                        label.item.i-b.v-top.ph3(for="nombre") Nombre;
                        input.item.i-b.v-top.ph9#nombre(type="text", name= "nombre", required)

                    div.container.p1 
                        label.item.i-b.v-top.ph3(for="apellido") Apellido;
                        input.item.i-b.v-top.ph9#apellido(type="text", name= "apellido", required)

                    div.container.p1 
                        label.item.i-b.v-top.ph3(for="edad") Edad;
                        input.item.i-b.v-top.ph9#edad(type="text", name= "edad", required)

                    div.container.p1 
                        label.item.i-b.v-top.ph3(for="foto") Foto;
                        input.item.i-b.v-top.ph9#image(type="text", name= "foto", required)

                    div.container.p1 
                        label.item.i-b.v-top.ph3(for="direccion") Direccion;
                        input.item.i-b.v-top.ph9#direccion(type="text", name= "direccion", required)
                    
                    div.container.p1 
                        label.item.i-b.v-top.ph3(for="telefono") Telefono;
                        input.item.i-b.v-top.ph9#telefono(type="text", name= "telefono", required)

                    div.container.p1
                        input.item.button.add(type="submit", value="Agregar")     