extends layout

block content 
    section.container 
        div.item.log
        div.item
            h1 
                a(href="/")= title 
        article.item 
            -if(data.length)
                table.table
                    tr 
                        th Numero de cliente 
                        th Nombre 
                        th Apellido 
                        th Edad
                        th Foto
                        th Direccion 
                        th Num de telefono 
                        th 
                          form(action="/agregar", method="GET")
                            input.button.add(type= "submit", value= "Agregar")
                    -each client in data 
                        tr 
                            td #{client.cliente_id}
                            td #{client.nombre}
                            td #{client.apellido}
                            td #{client.edad}
                            td 
                                img.foto(src= "#{client.foto}", alt="#{client.nombre}")
                            td #{client.direccion}
                            td #{client.telefono}
                            
                            td 
                                form(action="/editar/#{client.cliente_id}", method="GET")
                                    input.button.add(type= "submit", value= "Editar")

                                form(action="/eliminar/#{client.cliente_id}", method="POST")
                                    input.button.delete(type= "button", value= "Eliminar", onclick= "eliminar (this)")

                script.
                        function eliminar (input)
                        {
                            var Borrar = confirm ('Â¿Desea borrar?')
                            return (borrar) ? input.parentNode.submit() : false
                        }

            -else
                p.error No existen Clientes guardados en la base de datos
