extends layout.jade 

block content 
    section.container 
        div.item.log
        div.item
            h1 
                a(href="/")= title
        div.item
            form.form(method= "post", action="/")
                fieldset 
                    div.container.p1
                        label.item.i-b.v-top.ph3(for="movie_id") Id pelicula;
                        input.item.i-b.v-top.ph9#movie_id(type="text", name= "movie_id", required) 
                    
                    div.container.p1
                        label.item.i-b.v-top.ph3(for="title") Titulo;
                        input.item.i-b.v-top.ph9#titulo(type="text", name= "title", required)

                    div.container.p1 
                        label.item.i-b.v-top.ph3(for="estreno") Fecha de estreno;
                        input.item.i-b.v-top.ph9#estreno(type="text", name= "estreno", required)

                    div.container.p1 
                        label.item.i-b.v-top.ph3(for="rating") Puntaje;
                        input.item.i-b.v-top.ph9#rating(type="text", name= "rating", required)

                    div.container.p1 
                        label.item.i-b.v-top.ph3(for="image") Poster de la peli;
                        input.item.i-b.v-top.ph9#image(type="text", name= "image", required)

                    div.container.p1
                        input.item.button.add(type="submit", value="Agregar")     